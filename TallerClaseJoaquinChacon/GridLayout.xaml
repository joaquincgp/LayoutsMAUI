<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TallerClaseJoaquinChacon.GridLayout"
             Title="Grid Layout">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <BoxView Color="Green" />
        
        <BoxView Grid.Column="1"
                 Color="Blue" />
        
        <BoxView Grid.Row="1"
                 Color="Teal" />
        
        <BoxView Grid.Row="1"
                 Grid.Column="1"
                 Color="Purple" />
        <Button Grid.Row="1"
               Grid.Column="1"
               Text="Go to Stack Layout"
               Clicked="GoToStackLayout" 
               HorizontalOptions="Center"
               VerticalOptions="Center" />
       
    </Grid>
</ContentPage>